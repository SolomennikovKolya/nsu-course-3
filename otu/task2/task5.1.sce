// Данные (символ ` - транспонирование)
h = [2 4 6 8 10 12 14 16]';
R = [0.035 0.09 0.147 0.2 0.24 0.28 0.31 0.34]';

// Формируем матрицу A для системы A * x = R
// Столбцы: h^2, h, 1
A = [h.^2, h, ones(h)];

// Решаем систему методом наименьших квадратов
coeffs = A \ R;

// Извлекаем коэффициенты
C = coeffs(1);
D = coeffs(2);
K = coeffs(3);

// Выводим уравнение регрессии
disp("Линия регрессии: R = " + string(C) + "*h^2 + " + string(D) + "*h + " + string(K));

// Вычисляем предсказанные значения
R_pred = A * coeffs;

// Вычисляем суммарную квадратичную ошибку
error = sum((R - R_pred).^2);
disp("Суммарная ошибка: " + string(error));
